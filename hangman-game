#hangman game

import random

def func(x):
    if(x.isalpha()):
        return "true"
    else:
        return "false"

def chooseword():
    lis=["cabbage", "dewdrop", "whisker", "roast" , "waterfall"]
    return lis[random.randint(0,4)]

x=chooseword()
y=list("_"*len(x))
ans=""
for i in y:
    ans+=(i+" ")
print(ans) # important part
counter=0
complete=False
print("If you make more than five wrong guesses at a go you are out")
while ((counter<=5) or (complete!=True)):
    complete =True
    for i in range(len(y)):
            if(y[i]=='_'):
                complete=False
    if(complete==True):
        break
    print("Enter a single letter")
    t = input()
    if (func(t)==False):
        print ("Please enter single letter next time")
    else:
        anymatching=False
        for i in range(len(y)):
            if(x[i]==t):
                anymatching=True
                y[i]=t
                counter=0
        if(anymatching==False):
                counter+=1
                if(counter>5):
                    break
                print ("Wrong! Try again!")
    ans=""
    for i in y:
       ans+=(i+" ")
    print(ans)
if(complete==True):
    print("Correct! Good job!")
else:
    print("Better luck next time! Correct answer is "+x)
    
    
    
